<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Configuracoes">

    <TextView
    android:id="@+id/configuracoesTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_margin="20dp"
    android:textSize="22sp"
    android:textStyle="bold"
    android:text="Configurações"/>

    <TextView
        android:id="@+id/nivelLabelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nível de Dificuldade:"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/configuracoesTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="UnknownId" />

    <SeekBar
        android:id="@+id/nivelSb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/nivelLabelTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:max="3" />

    <TextView
        android:id="@+id/rodadasLabelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rodadas:"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/nivelSb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:id="@+id/rodadasSb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/rodadasLabelTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:max="15" />

    <Button
        android:id="@+id/fecharBt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Voltar para tela Principal" />

</androidx.constraintlayout.widget.ConstraintLayout>